@model FinalProjectJunyi.Models.Building

@{
    ViewBag.Title = "Edit Building";
}

<h2>Edit Building</h2>

<form action="@Url.Action("Edit", "Buildings")" method="post" enctype="multipart/form-data">
    @Html.AntiForgeryToken()

    <input type="hidden" name="BuildingId" value="@Model.BuildingId" />

    <div class="form-group">
        <label for="Name">Building Name</label>
        <input type="text" class="form-control" id="Name" name="Name" value="@Model.Name" required />
    </div>

    <div class="form-group">
        <label for="Address">Address</label>
        <input type="text" class="form-control" id="Address" name="Address" value="@Model.Address" required />
    </div>

    <div class="form-group">
        <label for="ImageFile">Building Image</label>
        <input type="file" class="form-control-file" id="ImageFile" name="ImageFile" />
        @if (!string.IsNullOrEmpty(Model.ImageURL))
        {
            <small>Current Image:</small>
            <img src="@Model.ImageURL" alt="Building Image" class="img-thumbnail mt-2" style="max-height: 150px;" />
        }
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a href="@Url.Action("Apartments", "Buildings")" class="btn btn-secondary">Cancel</a>
</form>
