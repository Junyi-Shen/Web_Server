@model FinalProjectJunyi.Models.User

@{
    ViewBag.Title = "Create User";
}

<h2>Create @ViewBag.Role</h2>

<form action="@Url.Action("Create", "Users")" method="post">
    @Html.AntiForgeryToken()

    <div class="form-group">
        <label for="FullName">Full Name</label>
        <input type="text" class="form-control" id="FullName" name="FullName" value="" required />
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="" required />
    </div>

    <div class="form-group">
        <label for="Password">Password</label>
        <input type="password" class="form-control" id="Password" name="Password" required />
    </div>

    <input type="hidden" name="Role" value="@ViewBag.Role" />

    <button type="submit" class="btn btn-success">Create</button>
    <a href="@Url.Action("ManageAccounts", "Users")" class="btn btn-secondary">Cancel</a>
</form>
