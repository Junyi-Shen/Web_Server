<form action="@Url.Action("Edit", "Users")" method="post">
    @Html.AntiForgeryToken()

    <input type="hidden" name="UserId" value="@Model.UserId" />

    <div class="form-group">
        <label for="FullName">Full Name</label>
        <input type="text" class="form-control" id="FullName" name="FullName" value="@Model.FullName" required />
    </div>

    <div class="form-group">
        <label for="Email">Email</label>
        <input type="email" class="form-control" id="Email" name="Email" value="@Model.Email" required />
    </div>

    <button type="submit" class="btn btn-success">Save Changes</button>
    <a href="@Url.Action("ManageAccounts", "Users")" class="btn btn-secondary">Cancel</a>
</form>
