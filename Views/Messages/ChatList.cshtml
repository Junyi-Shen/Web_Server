@model IEnumerable<FinalProjectJunyi.Models.User>

@{
    ViewBag.Title = "Chats";
}

<div class="container mt-4">
    <h2>Your Chats</h2>
    <ul class="list-group">
        @foreach (var chat in Model)
        {
            <li class="list-group-item d-flex justify-content-between align-items-center">
                <a href="@Url.Action("Chat", "Messages", new { userId = chat.UserId })" class="text-decoration-none">
                    <strong>@chat.FullName</strong>
                </a>
            </li>
        }
    </ul>
</div>
